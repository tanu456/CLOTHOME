doctype html
head 
    title  CLOTHOME
    style
        include ../static/style.css 
    body 
        nav#navbar.top 
            ul
                div#logo
                    img(src="../static/logo1.png", alt="find")
                    |   CLOTHOME
                li #[a(href = "/") Home] 
                li #[a(href = "/") About]
